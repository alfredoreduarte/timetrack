{
  "name": "timetrack-ui",
  "version": "1.0.0",
  "type": "module",
  "description": "Modern Electron desktop application for time tracking",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "dev:web": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "dev:full": "concurrently \"npm run dev:web\" \"npm run dev:electron\"",
    "build": "npm run build:web && npm run build:electron",
    "build:web": "vite build",
    "build:react": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "package": "npm run build && electron-builder",
    "package:dir": "npm run build && electron-builder --dir",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist node_modules"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "time-tracking"
  ],
  "author": "TimeTrack Team",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.8.1",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^23.0.1",
    "msw": "^2.0.11",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.2",
    "vite": "^5.0.5",
    "vitest": "^1.0.4",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@timetrack/shared": "^1.0.0",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@reduxjs/toolkit": "^2.0.1",
    "axios": "^1.6.2",
    "clsx": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.0.4",
    "react-router-dom": "^6.20.1",
    "react-hot-toast": "^2.4.1",
    "date-fns": "^2.30.0"
  },
  "build": {
    "appId": "com.timetrack.app",
    "productName": "TimeTrack",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
