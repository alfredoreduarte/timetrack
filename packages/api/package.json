{
  "name": "@timetrack/api",
  "version": "1.0.0",
  "description": "Time tracking API service similar to Toggl",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "dev:docker": "npm run migrate:deploy && npm run dev",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "npm run migrate:deploy && npm run start",
    "test": "jest",
    "migrate:deploy": "npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:reset": "npx prisma migrate reset",
    "db:studio": "npx prisma studio",
    "clean": "rm -rf dist node_modules",
    "lint": "echo 'Linting not configured yet'",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "time-tracking",
    "api",
    "toggl",
    "productivity"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@timetrack/shared": "^1.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dompurify": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsdom": "^23.0.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.6",
    "prisma": "^5.7.1",
    "socket.io": "^4.7.4",
    "svg-captcha": "^1.4.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/dompurify": "^3.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsdom": "^21.1.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^7.0.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
