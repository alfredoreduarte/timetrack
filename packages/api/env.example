# Database
DATABASE_URL="postgresql://username:password@localhost:5432/timetrack_db"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3011
NODE_ENV="development"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Request Size Limiting
REQUEST_SIZE_AUTH="50kb"
REQUEST_SIZE_TIME_ENTRIES="500kb"
REQUEST_SIZE_PROJECTS="200kb"
REQUEST_SIZE_USERS="100kb"
REQUEST_SIZE_DEFAULT="1mb"
REQUEST_SIZE_URLENCODED="1mb"
REQUEST_SIZE_RAW="1mb"
REQUEST_SIZE_TEXT="100kb"

# CORS
ALLOWED_ORIGINS="http://localhost:3010,http://localhost:5173,http://localhost:3011"

# Logging
LOG_LEVEL="info"